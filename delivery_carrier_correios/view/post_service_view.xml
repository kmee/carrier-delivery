<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sigepweb_post_service_tree" model="ir.ui.view">
            <field name="name">sigepweb.post.service.tree.view</field>
            <field name="model">sigepweb.post.service</field>
            <field name="arch" type="xml">
                <tree string="tree_sigep_post_service" version="7.0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="details"/>
                    <field name="post_card_id"/>
                </tree>
            </field>
        </record>

        <record id="view_sigepweb_post_service_form" model="ir.ui.view">
            <field name="name">sigepweb.post.service.form.view</field>
            <field name="model">sigepweb.post.service</field>
            <field name="arch" type="xml">
                <form string="sigep_post_service" version="7.0">
                    <sheet>
                        <group string="Dados Gerais">
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="post_card_id"/>
                            </group>
                            <group string="Descrição">
                                <field name="details"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="action_sigepweb_post_service_config"
                model="ir.actions.act_window">
            <field name="name">Configure SygepWeb Post Card</field>
            <field name="res_model">sigepweb.post.service</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sigepweb_post_service_config"
                  name="SygepWeb Post Service"
                  parent="base_delivery_carrier_label.menu_carriers_config"
                  sequence="20" action="action_sigepweb_post_service_config"/>

    </data>
</openerp>
