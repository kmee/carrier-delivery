<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sigepweb_contract_tree" model="ir.ui.view">
            <field name="name">sigepweb.contract.tree.view</field>
            <field name="model">sigepweb.contract</field>
            <field name="arch" type="xml">
                <tree string="Contratos" version="7.0">
                    <field name="number"/>
                    <field name="post_card_ids"/>
                    <field name="directorship_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_sigepweb_contract_form" model="ir.ui.view">
            <field name="name">sigepweb.contract.form.view</field>
            <field name="model">sigepweb.contract</field>
            <field name="arch" type="xml">
                <form string="Contratos" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="number"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="directorship_id"/>
                                <field name="year"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="CartÃµes de Postagem">
                                <field name="post_card_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sigepweb_contract_config"
                model="ir.actions.act_window">
            <field name="name">Configure SygepWeb Contract</field>
            <field name="res_model">sigepweb.contract</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sigepweb_contract_config"
                  name="Contracts"
                  parent="menu_sigepweb"
                  sequence="16" action="action_sigepweb_contract_config"/>

    </data>
</openerp>
